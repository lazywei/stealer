<h1>Tracks for <%= @playlist.name %></h1>

<table border="3" cellspacing="5" cellpadding="5">
        <tr>
                <th>Name</th>
                <th>Album</th>
                <th>Artist</th>
                <th>Preview</th>
                <th>YouTube</th>
        </tr>
        <% @tracks.each do |track| %>
                <tr>
                        <td><%= track.name %></td>
                        <td><%= track.album %></td>
                        <td><%= track.artist %></td>
                        <td><%= link_to 'Preview', track.preview_url %></td>
                        <td><%= link_to 'YouTube', track.youtube_url %></td>
                </tr>
        <% end %>
</table>
